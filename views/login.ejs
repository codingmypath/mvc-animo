<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/style.css">
    <title>Animo - Login In</title>
</head>
<body>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <!-- <form action="/login" method="POST">
        <input type="email" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Password">
        <input type="submit">
    </form> -->
    <section class="login-page">
        <section class="inside-info">
        <img class="logo" src="../images/animo-logo8.png" alt="logo">
        <h1>Animo</h1>
        <form class="login-input" action="/login" method="POST">
            <input class="input login" type="email" name="email" placeholder="Email">
            <input class="input login" type="password" name="password" placeholder="Password">
            <input class="submit-button" type="submit" value="Login">
        </form>
        <section class="signup-button">
            <a class="signup" href="/signup"> Sign Up</a>
        </section>
        </section> 
    </section>
</body>
</html>

