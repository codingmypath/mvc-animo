    <section class="container">

        <section class="quote">
            <h1>Quote of the Day</h1>
            <p class="quotes"></p>
            <h4 class="author"></h4>
        </section>

        <section class="months">
            <a id="back-month" class="fa-solid fa-angle-left"></a>
            <div class="month"></div>
            <a id="forward-month" class="fa-solid fa-angle-right"></a>
        </section>

        <ul class="weekdays">
            <li>Sunday</li>
            <li>Monday</li>
            <li>Tuesday</li>
            <li>Wednesday</li>
            <li>Thursday</li>
            <li>Friday</li>
